<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".SwiftQuantumApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwiftQuantum"
        android:localeConfig="@xml/locales_config"
        tools:targetApi="35">

        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SwiftQuantum">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Unified Auth Provider for cross-app authentication -->
        <provider
            android:name=".data.auth.UnifiedAuthProvider"
            android:authorities="com.swiftquantum.auth.provider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="com.swiftquantum.permission.READ_AUTH"
            android:writePermission="com.swiftquantum.permission.WRITE_AUTH" />
    </application>

    <!-- Custom permissions for auth provider access -->
    <permission
        android:name="com.swiftquantum.permission.READ_AUTH"
        android:protectionLevel="signature" />
    <permission
        android:name="com.swiftquantum.permission.WRITE_AUTH"
        android:protectionLevel="signature" />

</manifest>
